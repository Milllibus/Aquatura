<div class="green-background position-absolute">
  <div class="container">
    <div class="chatroom">
      <div class="chatroom-header">
        <h5>#<%= @chatroom.name %></h5>
        <p>Questions? Ask away, a fellow plant lover might know the answer.</p>
      </div>
      <div id="messages" data-chatroom-id="<%= @chatroom.id %>" data-user-id="<%= current_user.id %>" >
        <% @chatroom.messages.each do |message| %>
          <%= render "messages/message", message: message %>
        <% end %>
      </div>
      <div id="write-messages">
        <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
          <%= f.input :content, label: false, placeholder: "Your message..." %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% @skip_button_menu = true %>
