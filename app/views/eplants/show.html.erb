<div class="container title-eplant center">
  <h2>Hello, I'm <%= @eplant.nickname.capitalize %>!</h2>
</div>

<div class="container">

  <div class="level-eplant">
    <div class="eplant-level">
      <div class="center">
        <span class="center"> Level <%= @eplant.level %> </span>
      </div>
    </div>
  </div>

  <div class="eplant-contain">
    <div class="sun">
      <div class="sunrays"></div>
      <div class="circle"></div>
    </div>
    <div class="shadow"></div>
    <div class="pot"></div>
    <div class="water-jar"></div>
    <div class="water"></div>
    <div class="flower">
      <% if @eplant.level >=10 %><div class="stem"></div><% end %>
      <% if @eplant.level >= 30 %><div class="leaf"></div><% end %>
      <% if @eplant.level >= 50 %><div class="petal petal-3"></div><% end %>
      <% if @eplant.level >= 70 %><div class="petal petal-4"></div><% end %>
      <% if @eplant.level >= 90 %><div class="petal petal-5"></div><% end %>
      <% if @eplant.level >= 110 %><div class="petal petal-6"></div><% end %>
      <% if @eplant.level >= 130 %><div class="petal petal-1"></div><% end %>
      <% if @eplant.level >= 150 %><div class="petal petal-2"></div><% end %>
      <% if @eplant.level >= 50 %><div class="dot"></div><% end %>
    </div>
  </div>

  <h5 class="text-center">Make <%= @eplant.nickname.capitalize %> grow:</h5>
  <div class="user-btn mb-3">
    <%= link_to species_path do %>
      <div class="add-button user-button">
        <%= icon('fas', 'plus-circle') %> Add a new plant
      </div>
    <% end %>

    <%= link_to user_path(current_user.id) do %>
      <div class="eplant-button user-button">
        <%= icon('fab', 'pagelines') %> Water your plants
      </div>
    <% end %>
  </div>

</div>


<% @skip_button_menu = true %>
