<div class="specie-container">
  <div class="specie-header">
    <h3><%= @specie.name %></h3>
    <%= image_tag @specie.image_url %>
  </div>
  <div class="plant-info">
    <h3>About</h3>
    <%= @specie.description %>
    <div class="water-needs">
      <h3>Water needs</h3>
        <div class="water-drops">
        <p><i class="fas fa-tint"></i><i class="fas fa-tint"></i><i class="fas fa-tint"></i></p>
        <%= @specie.watering_frequency %>
      </div>
    </div>
    <div class="light-exposure">
      <h3>Light exposure</h3>
      <%= @specie.exposure %>
    </div>
  </div>
  <div class="add-plant-form">
    <%= simple_form_for [ @specie, @plant ] do |f| %>
      <h3>Your plant</h3>
      <%= f.input :nickname, label: false %>
      <div class="form-buttons">
        <fieldset class="form-group radio_buttons required plant_exposure">
            <div class="exposure-wrapper">
              <input type="hidden" name="plant[exposure_id]" value="">
              <div class="exposure-item">
                <%= f.input :exposure,
                  label: false,
                  as: :radio_buttons,
                  collection_wrapper_tag: 'div',
                  collection_wrapper_class: 'exposure-wrapper',
                  item_wrapper_class: 'exposure-item',
                  input_html: {class: 'exposure-selector'},
                  collection: Plant::EXPOSURES
                %>
              </div>
            </div>
        </fieldset>

        <button name="button" type="submit" class="button">
          add
        </button>
      </div>

      <%#= f.submit "add my plant", class: "btn btn-primary" %>
    <% end %>
  </div>
  <% @skip_button_menu = true %>
</div>
