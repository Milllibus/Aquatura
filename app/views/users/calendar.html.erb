<div class="share-calendar">
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#shareCalendarModal">
    Add a review
  </button>
              </div>
              <div class="modal fade" id="shareCalendarModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Share your calendar with a friend</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <%= form_with url: share_calendar_path, method: :post do |form| %>
                        <%= form.label :mail, "Friend's email:" %>
                        <%= form.text_field :mail %>
                        <%= form.submit "Send" %>
                      <% end %>
                    </div>
                  </div>
                </div>
</div>
