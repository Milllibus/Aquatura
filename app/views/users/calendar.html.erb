<div class="container d-flex flex-column">

  <div class="share-calendar d-flex align-items-center">
    <button type="button" class="eplant-button friends-btn" data-toggle="modal" data-target="#shareCalendarModal">
      <i class="fas fa-user-friends"></i> Ask a friend some help!
    </button>
  </div>
  <div class="modal fade" id="shareCalendarModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Share your calendar with a friend</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= form_with url: share_calendar_path, method: :post do |form| %>
            <%= form.label :mail, "Friend's email:" %>
            <%= form.text_field :mail %>
            <%= form.label :duration, "For how long do you leave?" %>
            <%= form.number_field :duration, in: 1..100, step: 1 %>
            <%= form.submit "Send", class: 'send-button' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="user-calendar">
    <h2>Calendar</h2>
    <%= render 'general_calendar', general_schedule: @general_schedule %>
  </div>

</div>

<%= console %>
